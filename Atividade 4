package main

import "fmt"

func main() {
	var slice []int
	var soma, tamanho, x int
	fmt.Println("digite o tamanho do slice:")
	fmt.Scan(&tamanho)
	for i := 0; i < tamanho; i++ {
		fmt.Println("digite um numero:")
		fmt.Scan(&x)
		slice = append(slice, x)
		soma = soma + x
	}
	fmt.Println(slice)
	fmt.Println(soma)
}
