package main

import "fmt"

func main() {
	var slice = []int{1, 2, 3, 4, 5}
	var num int
	fmt.Println("escreva um numero para adicionar:")
	fmt.Scanln(&num)

	encontrado := false
	for _, valor := range slice {
		if valor == num {
			encontrado = true
			break
		}
	}
	if !encontrado {
		slice = append(slice, num)
	}
	fmt.Println("essa Ã© sua nova slice:", slice)
}
