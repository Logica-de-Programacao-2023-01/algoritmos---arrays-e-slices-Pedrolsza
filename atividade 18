package main

import "fmt"

func main() {
	var n int
	fmt.Print("Digite um n√∫mero inteiro positivo: ")
	fmt.Scan(&n)
	primos := []int{}
	num := 2
	for len(primos) < n {
		ehPrimo := true
		for _, primo := range primos {
			if num%primo == 0 {
				ehPrimo = false
				break
			}
		}
		if ehPrimo {
			primos = append(primos, num)
		}
		num++
	}
	fmt.Println(primos)
}
